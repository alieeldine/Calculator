<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical" android:padding="12pt"
        android:background="@color/colorGray">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etShowNumber" android:text="0" android:gravity="right" android:paddingTop="10pt"
            android:background="@color/colorGray" android:textSize="40sp" android:textColor="@color/white"
            android:paddingRight="4pt"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="AC"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button8" android:background="@color/whiteBack"
                    android:textSize="25sp" android:layout_weight="1"/>
            <Button
                    android:text="+/-"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/btnPlusMinus" android:background="@color/whiteBack"
                    android:textSize="25sp" android:layout_weight="1" android:onClick="btnNumberEvent"/>
            <Button
                    android:text="%"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button10" android:background="@color/whiteBack"
                    android:textSize="25sp" android:layout_weight="1"/>
            <Button
                    android:text="\u00F7"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button11" android:background="@color/buop"
                    android:textColor="@color/white" android:textSize="25sp" android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="7"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/btn7" android:background="@color/whiteBack"
                    android:textSize="25sp" android:layout_weight="1" android:onClick="btnNumberEvent"/>
            <Button
                    android:text="8"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/btn8" android:background="@color/whiteBack"
                    android:textSize="25sp" android:layout_weight="1" android:onClick="btnNumberEvent"/>
            <Button
                    android:text="9"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/btn9" android:background="@color/whiteBack"
                    android:textSize="25sp" android:layout_weight="1" android:onClick="btnNumberEvent"/>
            <Button
                    android:text="\u00D7"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button15" android:background="@color/buop"
                    android:textColor="@color/white" android:textSize="25sp" android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="4"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/btn4" android:background="@color/whiteBack"
                    android:textSize="25sp" android:layout_weight="1" android:onClick="btnNumberEvent"/>
            <Button
                    android:text="5"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/btn5" android:background="@color/whiteBack"
                    android:textSize="25sp" android:layout_weight="1" android:onClick="btnNumberEvent"/>
            <Button
                    android:text="6"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/btn6" android:background="@color/whiteBack"
                    android:textSize="25sp" android:layout_weight="1" android:onClick="btnNumberEvent"/>
            <Button
                    android:text="-"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button7" android:background="@color/buop"
                    android:textColor="@color/white" android:textSize="25sp" android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="1"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/btn1" android:background="@color/whiteBack"
                    android:textSize="25sp" android:layout_weight="1" android:onClick="btnNumberEvent"/>
            <Button
                    android:text="2"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/btn2" android:background="@color/whiteBack"
                    android:textSize="25sp" android:layout_weight="1" android:onClick="btnNumberEvent"/>
            <Button
                    android:text="3"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/btn3" android:background="@color/whiteBack"
                    android:textSize="25sp" android:layout_weight="1" android:onClick="btnNumberEvent"/>
            <Button
                    android:text="+"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button19" android:background="@color/buop"
                    android:textColor="@color/white" android:textSize="25sp" android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="0"
                android:layout_width="68pt"
                android:layout_height="30pt" android:id="@+id/btn0" android:layout_weight="1"
                android:background="@color/whiteBack" android:textSize="25sp" android:onClick="btnNumberEvent"/>
        <Button
                android:text="."
                android:layout_width="30pt"
                android:layout_height="30pt" android:id="@+id/btnDot" android:layout_weight="1"
                android:background="@color/whiteBack" android:textSize="25sp" android:onClick="btnNumberEvent"/>
        <Button
                android:text="="
                android:layout_width="30pt"
                android:layout_height="30pt" android:id="@+id/button3" android:layout_weight="1"
                android:background="@color/buop" android:textColor="@color/white" android:textSize="25sp"/>
    </LinearLayout>
</LinearLayout>